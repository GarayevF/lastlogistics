@model List<Incoterms>
@{
    List<Language> languages = ViewBag.Languages;
}
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Update Incoterms</div>
                <hr>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model[0].AboutPhoto_1">First About Image</label>
                        <input accept="image/*" asp-for="@Model[0].AboutPhoto_1" class="form-control">
                        <span asp-validation-for="@Model[0].AboutPhoto_1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[0].AboutPhoto_2">Second About Image</label>
                        <input accept="image/*" asp-for="@Model[0].AboutPhoto_2" class="form-control">
                        <span asp-validation-for="@Model[0].AboutPhoto_2" class="text text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[0].AboutPhoto_3">Third About Image</label>
                        <input accept="image/*" asp-for="@Model[0].AboutPhoto_3" class="form-control">
                        <span asp-validation-for="@Model[0].AboutPhoto_3" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[0].ConditionPhoto">Condition Image</label>
                        <input accept="image/*" asp-for="@Model[0].ConditionPhoto" class="form-control">
                        <span asp-validation-for="@Model[0].ConditionPhoto" class="text text-danger"></span>
                    </div>
                    @if (languages != null && languages.Count() > 0)
                    {
                        @for (int i = 0; i < languages.Count(); i++)
                        {
                            <span>@languages[i].Name</span>
                            <div class="form-group">
                                <label asp-for="@Model[i].AboutDescription">About Description</label>
                                <textarea asp-for="@Model[i].AboutDescription" class="form-control"></textarea>
                                <span asp-validation-for="@Model[i].AboutDescription" class="text text-danger"></span>
                            </div>
                            <span>@languages[i].Name</span>
                            <div class="form-group">
                                <label asp-for="@Model[i].ConditionDescription">Condition Description</label>
                                <textarea asp-for="@Model[i].ConditionDescription" class="form-control"></textarea>
                                <span asp-validation-for="@Model[i].ConditionDescription" class="text text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="@Model[i].LanguageId" value="@languages[i].Id">
                        }
                    }
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary px-5">Submit</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}