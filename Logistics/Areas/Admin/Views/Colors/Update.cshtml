@model Color
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Update Colors</div>
                <hr>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="HeaderBackgroundColor">Header Background Color</label>
                        <input asp-for="HeaderBackgroundColor" class="form-control">
                        <span asp-validation-for="HeaderBackgroundColor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FooterBackgroundColor">Footer Background Color</label>
                        <input asp-for="FooterBackgroundColor" class="form-control">
                        <span asp-validation-for="FooterBackgroundColor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary px-5">Submit</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}