@model List<NewsContent>
@{
    List<Language> languages = ViewBag.Languages;
}
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Update News</div>
                <div asp-validation-summary="ModelOnly"></div>
                <hr>
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model[0].Photo"></label>
                        <input accept="image/*" asp-for="@Model[0].Photo" class="form-control">
                        <span asp-validation-for="@Model[0].Photo" class="text-danger"></span>
                    </div>
                    @if (languages != null && languages.Count() > 0)
                    {
                        @for (int i = 0; i < languages.Count(); i++)
                        {
                            <span>@languages[i].Name</span>
                            <div class="form-group">
                                <label asp-for="@Model[i].Title"></label>
                                <input asp-for="@Model[i].Title" class="form-control">
                                <span asp-validation-for="@Model[i].Title" class="text text-danger"></span>
                            </div>
                            <span>@languages[i].Name</span>
                            <div class="form-group">
                                <label asp-for="@Model[i].Description"></label>
                                <textarea asp-for="@Model[i].Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="@Model[i].Description" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="@Model[i].LanguageId" value="@languages[i].Id">
                        }
                    }
                    <div class="form-group">
                        <label asp-for="@Model[0].Date"></label>
                        <input asp-for="@Model[0].Date" type="date" class="form-control">
                        <span asp-validation-for="@Model[0].Date" class="text text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary px-5">Submit</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}